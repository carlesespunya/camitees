<% @products.each do |product| %>
  <h1><%= product.name %></h1>
   <img src="<%= product.product_colors[0].link %>" alt="<%= product.name %>" width="500" height="600">
  <button type="button" class="btn btn-primary">
    <%= link_to 'See more', product_path(product), :class => "button"%>
  </button>
<% end %>
